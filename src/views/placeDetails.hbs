
<main class="placePage"> 
	<header class = "place_header">
			<h2>{{ placeResults.name }}</h2>
	</header>
<div class = place_details>
	<a href="//{{placeResults.website}}" target = "_blank"><p>{{ placeResults.website }}</p></a>
	<p>{{ placeResults.description }}</p>
	<div class="placeAddress">
		<img src="/assets/droppin-grey.png" class = "icon"><p>{{ placeResults.address }}</p>
	</div>
<div class="placeHours">
	<img src="/assets/clock.png" class = "icon">
	<div class="times">
	<p>Monday {{listtimes placeHours.monday}}</p>
	<p>Tuesday {{listtimes placeHours.tuesday}}</p>
	<p>Wednesday {{listtimes placeHours.wednesday}}</p>
	<p>Thursday {{listtimes placeHours.thursday}}</p>
	<p>Friday {{listtimes placeHours.friday}}</p>
	<p>Saturday {{listtimes placeHours.saturday}}</p>
	<p>Sunday {{listtimes placeHours.sunday}}</p>
	</div>
</div>

<section class="values">
	<header>
			<h3>VALUES</h3>
	</header>

	<p></p>
	<ul>
	{{#each values }}
		<li> {{ this }} </li>
	{{/each }}

</section>
</main>
</div>
